{% extends 'base.html.twig' %}

{% block title %}{{'Contact us'|trans}} {% endblock %}

{% block body %}

<div class="pure-g">
	<div class="pure-u-1">
		{{'Contact us'|trans}}
	</div>
</div>

<div class="pure-g">
	<div class="pure-u-1 pure-u-md-1-2">

		<form id="commentform" class="pure-form" action="/contact" method="POST">

		    <fieldset class="pure-group">
		        <input autocomplete='name' name="feedback_name" type="text" class="pure-input-1" placeholder="{{'Your Name'|trans}}">
		        <input autocomplete='email' name="feedback_email" type="email" class="pure-input-1" placeholder="Email">
		    </fieldset>


		    <fieldset class="pure-group">
		        <input name="feedback_title" type="text" class="pure-input-1" placeholder="{{'Title'|trans}}">
		        <textarea name="feedback_text" class="pure-input-1" placeholder="{{'Your feedback'|trans}}"></textarea>
		    </fieldset>

		    <div class="g-recaptcha" data-sitekey="{{recaptcha_site_key}}"></div>

		    <span id="captchacheck">
		    <button type="submit" class="pure-button pure-input-1 pure-button-primary" onclick="get_action('#commentform')">{{'Submit'|trans}}</button>
			</span>
		</form>

	</div>
</div>

<script type="text/javascript">
function get_action(form) {

	var v = grecaptcha.getResponse();
	if(v.length == 0)
	{
	    document.getElementById('captchacheck').innerHTML="Captcha Error" + '<button type="submit" class="pure-button pure-input-1 pure-button-primary" onclick="get_action(\'#commentform\')">Submit</button>';
	    return false;
	}
}
</script>
 

{% endblock %}
