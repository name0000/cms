{% extends 'base.html.twig' %}

{% block title %}{{ category[0].cats  }}{% if curr_page > 1 %}. {{'Page'|trans}} {{curr_page}} {% endif %}{% endblock %}

{% block body %}

	<h3> {{ category[0].cats }} </h3>

{% for a in category %}

	
		<div class="pure-g">
			<div class="pure-u-1 category-item-box">
				<div class="pure-g">
					<div class="pure-u-1 pure-u-sm-2-5 pure-u-md-1-5">
						<a href="/{{a.id}}/{{a.slug}}"><img alt="{{a.name}}" class="vertical-align listimage" src="{% if a.image|length > 0 %} /img/items/{{a.image}} {% else %} /img/noimage.jpg {% endif %}" /></a>
					</div>
					<div class="pure-u-1 pure-u-sm-3-5 pure-u-md-4-5">
						<strong><a href="/{{a.id}}/{{a.slug}}">{{a.name}} {{'Reviews'|trans}}</a></strong>

						{% if a.text|length > 0 %}
						<p>{{'Review'|trans}}: {{ a.text|length > 500 ? a.text|slice(0, 500) ~ '...' : a.text }} <a href="/{{a.id}}/{{a.slug}}">{{'Read more'|trans}}</a></p>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	

{% endfor %}

{% if next_page == true %}
<div class="pure-g">
	<div class="pure-u-1 setborder margintop15 padding10">
		{% set next_page = curr_page + 1 %}
		<a href="/category/{{cat_id}}/{{next_page}}">{{'Next'|trans}}</a>
	</div>
</div>
{% endif %}

{% endblock %}